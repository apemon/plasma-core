{
  "name": "plasma-core",
  "version": "0.0.4-beta.40",
  "description": "Core PG plasma node",
  "main": "index.js",
  "scripts": {
    "test": "npm run test.unit && npm run test.integration",
    "test.unit": "./node_modules/.bin/mocha --recursive test/unit",
    "test.integration": "./node_modules/.bin/mocha --recursive test/integration --timeout 10000",
    "test.coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "./node_modules/.bin/eslint src/ test/",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "postinstall": "rm -f node_modules/web3/types.d.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "**/base-service.js",
      "**/base-provider.js",
      "**/mock-app.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plasma-group/plasma-core.git"
  },
  "keywords": [
    "plasma"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plasma-group/plasma-core/issues"
  },
  "homepage": "https://github.com/plasma-group/plasma-core#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.121",
    "@types/toposort": "^2.0.1",
    "@types/uuid": "^3.4.4",
    "app-root-path": "^2.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ganache-cli": "^6.2.5",
    "gts": "^0.9.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "typescript": "^3.4.0-dev.20190222"
  },
  "dependencies": {
    "@types/async-lock": "^1.1.1",
    "@types/bn.js": "^4.11.4",
    "@types/debug": "^4.1.2",
    "@types/web3": "^1.0.18",
    "async-lock": "^1.1.3",
    "axios": "^0.18.0",
    "bn.js": "^4.11.8",
    "debug": "^4.1.1",
    "eth-lib": "^0.2.8",
    "lodash": "^4.17.11",
    "plasma-contracts": "0.0.4-beta.2",
    "plasma-utils": "0.0.4-beta.2",
    "toposort": "^2.0.2",
    "uuid": "^3.3.2",
    "web3": "1.0.0-beta.33"
  }
}
