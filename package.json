    "@types/web3": "^1.0.18",
    "async-lock": "^1.1.3",
    "axios": "^0.18.0",
    "bn.js": "^4.11.8",
    "debug": "^4.1.1",
    "eth-lib": "^0.2.8",
    "ethers": "^4.0.26",
    "lodash": "^4.17.11",
    "plasma-contracts": "0.0.4-beta.2",
    "plasma-utils": "0.0.4-beta.2",
