{
  "name": "plasma-core",
  "version": "0.0.4-beta.40",
  "description": "Core PG plasma node",
  "main": "index.js",
  "scripts": {
    "test": "npm run test.unit",
    "test.unit": "mocha --require ts-node/register 'test/unit/**/*.ts'",
    "test.coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "check": "prettier --check '{src,test}/**/*.ts'",
    "fix": "prettier --write '{src,test}/**/*.ts'",
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "postinstall": "rm -f node_modules/web3/types.d.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "nyc": {
    "exclude": [
      "**/base-service.js",
      "**/base-provider.js",
      "**/mock-app.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plasma-group/plasma-core.git"
  },
  "keywords": [
    "plasma"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plasma-group/plasma-core/issues"
  },
  "homepage": "https://github.com/plasma-group/plasma-core#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.121",
    "@types/mocha": "^5.2.6",
    "@types/toposort": "^2.0.1",
    "@types/uuid": "^3.4.4",
    "app-root-path": "^2.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ganache-cli": "^6.2.5",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0",
    "prettier": "^1.16.4",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.0.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.0-dev.20190222"
  },
  "dependencies": {
    "@types/async-lock": "^1.1.1",
